<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.exam.mapper.TopicOptionsMapper">

    <resultMap type="TopicOptions" id="TopicOptionsResult">
        <id     property="topic_options_id"       column="topicOptionsId"      />
        <result property="topic_id"       column="topicId"      />
        <result property="options_content"     column="optionsContent"    />
        <result property="options_state"     column="optionsState"    />
        <result property="delFlag"      column="del_flag"     />
        <result property="createBy"     column="create_by"    />
        <result property="createTime"   column="create_time"  />
        <result property="updateBy"     column="update_by"    />
        <result property="updateTime"   column="update_time"  />
        <result property="remark"       column="remark"       />
    </resultMap>

    <select id="selectTopicOptionsList" parameterType="com.ruoyi.exam.domain.TopicOptions" resultMap="TopicOptionsResult">
        select topic_options_id, topic_id, options_content, options_state,
        del_flag, create_time, update_time, create_by, update_by, remark from topic_options
        where del_flag = 0
        <if test="topicId != null and topicId != ''">
            AND topic_id = #{topicId}
        </if>
    </select>

    <insert id="insertTopicOptionsData" parameterType="com.ruoyi.exam.domain.TopicOptions">
        insert into topic_options(
        <if test="topicOptionsId != null">topic_options_id,</if>
        <if test="topicId != null">topic_id,</if>
        <if test="optionsContent != null and optionsContent != ''">options_content,</if>
        <if test="optionsState != null and optionsState != ''">options_state,</if>
        del_flag,
        <if test="remark != null and remark != ''">remark,</if>
        <if test="createBy != null and createBy != ''">create_by,</if>
        create_time
        )values(
        <if test="topicOptionsId != null">#{topicOptionsId},</if>
        <if test="topicId != null">#{topicId},</if>
        <if test="optionsContent != null and optionsContent != ''">#{optionsContent},</if>
        <if test="optionsState != null and optionsState != ''">#{optionsState},</if>
        0,
        <if test="remark != null and remark != ''">#{remark},</if>
        <if test="createBy != null and createBy != ''">#{createBy},</if>
        sysdate()
        )
    </insert>

    <update id="updateTopicOptions" parameterType="com.ruoyi.exam.domain.TopicOptions">
        update topic_options
        <set>
            <if test="optionsContent != null and optionsContent != ''">options_content = #{optionsContent},</if>
            <if test="optionsState != null and optionsState != ''">options_state = #{optionsState},</if>
            update_time = sysdate()
        </set>
        where topic_options_id = #{topicOptionsId}
    </update>

</mapper>
